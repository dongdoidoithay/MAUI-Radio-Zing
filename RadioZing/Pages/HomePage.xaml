<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RadioZing.ViewModels"
             x:Class="RadioZing.Pages.HomePage"
             xmlns:controls="clr-namespace:RadioZing.Controls"
             >
    <Grid
        RowDefinitions="Auto,Auto,*,Auto"
        RowSpacing="10"
        Background="{AppThemeBinding Light={StaticResource Grey1}, Dark={StaticResource Grey9}}"
        >
<!--BackgroundColor="{AppThemeBinding Dark={StaticResource DarkBackground},Light={StaticResource LightBackground}}"-->
        <!--
        Move -end single -column layout:
            row1 search bar
            row2 platform
        
        Desktop single -line layout:
           col1 platform col2 search bar
        -->
        <Grid
            Grid.Row="0"
            Padding="10,8,10,8"
            RowDefinitions="{OnPlatform WinUI='45',MacCatalyst='45',Android='30,45',iOS='30,45'}"
            ColumnDefinitions="{OnPlatform WinUI='*,200',MacCatalyst='*,200',Android='*',iOS='*'}">

            <HorizontalStackLayout
                Grid.Row="{OnPlatform WinUI=0,MacCatalyst=0,Android=1,iOS=1}"
                Grid.Column="{OnPlatform WinUI=0,MacCatalyst=0,Android=0,iOS=0}"
                BindableLayout.ItemsSource="{Binding HomeCates}"
                Spacing="20">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout
                            Spacing="3"
                            VerticalOptions="End">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomePageViewModel}}, Path=TabChangedAsyncCommand}"
                                    CommandParameter="{Binding cateId}"/>
                            </VerticalStackLayout.GestureRecognizers>
                            <Label
                                Text="{Binding name}"
                                VerticalTextAlignment="End"
                                Style="{StaticResource Tab}">
                                <Label.Triggers>
                                    <DataTrigger
                                        TargetType="Label"
                                        Binding="{Binding isSelected}"
                                        Value="true">
                                        <Setter
                                            Property="FontSize"
                                            Value="18"/>
                                        <Setter
                                            Property="FontAttributes"
                                            Value="Bold"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <BoxView
                                HeightRequest="3"
                                Margin="8,0,8,0"
                                Color="Transparent">
                                <BoxView.Triggers>
                                    <DataTrigger
                                        TargetType="BoxView"
                                        Binding="{Binding isSelected}"
                                        Value="true">
                                        <Setter
                                            Property="Color"
                                            Value="{StaticResource Primary}"/>
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                        </VerticalStackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
            
 <!--BackgroundColor="{AppThemeBinding Dark={StaticResource DarkSearchBarBackgroundColor},Light={StaticResource LightSearchBarBackgroundColor}}"-->
            <Border
                Grid.Row="{OnPlatform WinUI=0,MacCatalyst=0,Android=0,iOS=0}"
                Grid.Column="{OnPlatform WinUI=1,MacCatalyst=1,Android=0,iOS=0}"
                HeightRequest="35"
                VerticalOptions="Start"
                Padding="5,0,5,0"
                Background="{AppThemeBinding Light={StaticResource Grey1}, Dark={StaticResource Grey9}}"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>
                <HorizontalStackLayout
                    Spacing="5"
                    BackgroundColor="Transparent">
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomePageViewModel}}, Path=GoToSearchPageAsyncCommand}"/>
                    </HorizontalStackLayout.GestureRecognizers>
                    <Image
                        Source="{AppThemeBinding Dark='search_dark.png',Light='search.png'}"
                        Aspect="AspectFill"
                        WidthRequest="15"
                        HeightRequest="15"
                        VerticalOptions="Center"/>
                    <Label
                        VerticalTextAlignment="Center"
                        
                        FontSize="{OnPlatform WinUI=14,MacCatalyst=14,Android=13,iOS=13}"
                        Text="Episode search"/>
                </HorizontalStackLayout>
            </Border>
        </Grid>
