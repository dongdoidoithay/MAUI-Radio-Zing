        <CollectionView
            Grid.Row="2"
            WidthRequest="{OnPlatform WinUI=800,MacCatalyst=800}"
            VerticalOptions="FillAndExpand"
            ItemsSource="{Binding HomeEpisodes}"
            ItemsLayout="{OnPlatform WinUI='VerticalGrid, 5',MacCatalyst='VerticalGrid, 5',Android='VerticalGrid, 3',iOS='VerticalGrid, 3'}"
            BackgroundColor="Transparent"
            RemainingItemsThreshold="{OnPlatform WinUI=5,MacCatalyst=5,Android=3,iOS=3}"
            RemainingItemsThresholdReachedCommand="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomePageViewModel}}, Path=LoadLastPageTagSongMenusAsyncCommand}"
            Scrolled="CollectionView_Scrolled">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Padding="10"
                        RowSpacing="5"
                        RowDefinitions="Auto,Auto">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomePageViewModel}}, Path=GotoSongMenuPageAsyncCommand}"
                                CommandParameter="{Binding .}"/>
                        </Grid.GestureRecognizers>
                        <Border
                            Grid.Row="0"
                            StrokeThickness="0.1"
                            StrokeShape="RoundRectangle 10">
                            <Image
                                Aspect="AspectFill"
            Source="{Binding ImageUrl, TargetNullValue='default_podcast_image.png'}"
            HorizontalOptions="Center"
            Margin="0,0,0,12"
            Grid.Row="0" Grid.Column="0"/>
                        </Border>
                        <Label
                            Grid.Row="1"
                            Text="{Binding subtitle}"
                            Style="{StaticResource Explain}"
                            LineBreakMode="WordWrap"/>
                        <Label
     Grid.Row="1"
     Text=" 1"
     Style="{StaticResource Explain}"
     LineBreakMode="WordWrap"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

